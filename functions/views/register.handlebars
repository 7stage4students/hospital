<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Seven Health</title>
    <!-- Plugins CSS -->
    <link rel="stylesheet" href="./newtheme/plugins/bootstrap-4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="./newtheme/plugins/meanmenu/meanmenu.css">
    <!-- fonts -->
    <link rel="stylesheet" href="./newtheme/fonts/ep-icon-fonts/css/style.css">
    <link rel="stylesheet" href="./newtheme/fonts/fontawesome-5/css/all.min.css">
    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="./newtheme/css/settings.css">
    <link rel="stylesheet" href="./newtheme/css/style.css">
</head>

<body>
<div class="container d-flex flex-column align-items-center">
   <h1 class="text-center">Register</h1> 
    {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
            </div>
        {{/if}}
<div class="row col-md-6 ">

  <form method="POST" class="col-md-12 mb-5 " enctype="multipart/form-data" action="/user/register">      

            <div class="form-group">
                <label for="firstNameInput">Full Name</label>
                <input name="name" type="text" class="form-control" id="firstNameInput">
            </div>


             <div class="form-group">
                <label for="firstNameInput">Your Age</label>
                <input name="age" type="number" class="form-control" id="Image">
            </div>


            <div class="form-group">
                <label for="emailInput">Email address</label>
                <input name="email" type="email" class="form-control" id="emailInput" placeholder="Enter email">
            </div>

            <div class="mb-3 form-group">
               <Label class="text-strong">Gender</Label>
               <br />
                <input name="gender" type="radio" placeholder="gender" value="Male"> <label>Male</label>
                <br />
                <input name="gender" type="radio" placeholder="gender" value="female"> <label>Female</label>
            </div>

    

            <div class="form-group">
                <label for="passwordInput">Password</label>
                <input name='password' type="" class="form-control" id="passwordInput" placeholder="Password">
            </div>

            <div class="form-group">
                <label for="confirmPasswordInput">Confirm Password</label>
                <input name="confirmPassword" type="password" class="form-control" id="confirmPasswordInput"
                    placeholder="Re-enter your password here">
            </div>
        
            <input type="file" name="upload" multiple>
        

            <button type="submit" id="register" class="btn mt-4 btn-primary btn-block">Register</button>
    </form>

</div>
</div> 

